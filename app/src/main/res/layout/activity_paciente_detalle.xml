<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@color/background">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datos del paciente"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.446"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.138" />

        <TextView
            android:id="@+id/txtNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="156dp"
            android:background="@drawable/textview_background"
            android:padding="8dp"
            android:text="Nombre"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtApellido"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Apellido"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_person"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNombre" />

        <TextView
            android:id="@+id/txtEdad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Edad"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_cake"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtApellido" />

        <TextView
            android:id="@+id/txtEnfermedad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Enfermedad"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_healing"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtEdad" />

        <TextView
            android:id="@+id/txtNumeroHabitacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Número de Habitación"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_hotel"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtEnfermedad" />

        <TextView
            android:id="@+id/txtNumeroCama"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Número de Cama"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_local_hotel"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNumeroHabitacion" />

        <TextView
            android:id="@+id/txtMedicamentosAsignados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Medicamentos Asignados"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_medical_services"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNumeroCama" />

        <TextView
            android:id="@+id/txtFechaNacimiento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Fecha de Nacimiento"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_event"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtMedicamentosAsignados" />

        <TextView
            android:id="@+id/txtHoraAplicacionMedicamento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:padding="8dp"
            android:text="Hora de Aplicación del Medicamento"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:background="@drawable/textview_background"
            android:drawableStart="@drawable/ic_access_time"
            android:drawablePadding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtFechaNacimiento" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
